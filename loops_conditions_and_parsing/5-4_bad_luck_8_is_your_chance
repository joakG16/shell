#!/usr/bin/env bash
# This script loops through1 to 10, and: displays bad luck for the 4th loop iteration; displays good luck for the 8th loop iteration; displays Best School for the other iterations

i=1
while [ $i -le 10 ]
do
	if test $i -eq 4
	then
		echo "bad luck"
		i=$(( i + 1 ))
	elif test $i -eq 8
	then
		echo "good luck"
		i=$(( i + 1 ))
	else
		echo "Best School"
		i=$(( i + 1 ))
	fi
done
