#!/usr/bin/env bash
#Bash script that

pid_file="/var/run/myscript.pid"
echo $$ > $pid_file

trap 'echo "I hate the kill command"' 15

func2 () {
	echo "Y U no love me?!"
}

trap 'func2' 2

func3 () {
	rm -rf "$pid_file"
	exit
}

trap 'func3' 3 15

i=0
while [ $i -gt 0 ]
do
    echo "To infinty and beyond"
done
