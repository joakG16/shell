#!/usr/bin/env bash
#Bash script that

pid_file="/var/run/myscript.pid"
echo $$ > $pid_file

func1 (){
	echo "I hate the kill command"
}

func2 () {
	echo "Y U no love me?!"
}

func3 () {
	rm -rf "$pid_file"
	exit
}

while true
do
    echo "To infinty and beyond"
    trap 'func1' 15
    trap 'func2' 2
    trap 'func3' 3 15
done
